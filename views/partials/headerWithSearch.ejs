<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="/favicon.ico">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" integrity="sha256-h20CPZ0QyXlBuAw7A+KluUYx/3pK+c7lYEpqLTlxjYQ=" crossorigin="anonymous" />
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link rel="stylesheet" href="/stylesheets/steam.css">
  <title>Steam Checker</title>
</head>

<body>
  <nav class="navbar navbar-light bg-light main-nav nav-with-search navbar-expand-lg">
      <a class="navbar-brand" href="/" title = "SteamChecker Home">
        <div style="display: flex;align-items: center;">
          <img src="/logo/logo.svg" alt="logo" class="logo">
          <span class="logo-text">SteamChecker</span>
        </div>
      </a>
      <div class="d-flex align-items-center">
        <button class="navbar-toggler nav-searchbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <i class="fas fa-search" style="font-size: 1.1rem;"></i>
        </button>
        <button class="navbar-toggler mobile-navbar-toggler" type="button">
          <div class="custom-burger line1"></div>
          <div class="custom-burger line2"></div>
          <div class="custom-burger line3"></div>
        </button>
      </div>
      <div class="collapse-controls collapse navbar-collapse" id="navbarSupportedContent">
        <div class="controls">
          <form action="/user" method="GET" style="display: flex;">
            <input type="text" name="url" class="url-input user-url-input" id="url-input">
            <button class="clear-input" type="button">
              <span class="clear-input-background">
                <i class="fas fa-times"></i>
              </span>
            </button>
            <button class="search-submit" type="submit"><i class="fas fa-search"></i></button>
          </form>
        </div>
      </div>
        <div class="login-wrapper d-none d-lg-block">
          <% const userKeys = Object.keys(user).length %>
          <% if(userKeys === 0) { %>
            <div class="login">
              <a href="/auth/steam">
                <img src="/images/steamloginbutton.jpg" alt="login-btn" >
              </a>
            </div>
          <% }else{ %>
            <% const url = user.loggedUserId %>
            <% const queryURL = encodeURIComponent(url) %>
            <% const queryString = `/user?url=${queryURL}` %>
            <div class="login">
              <a href="<%= queryString %>">
                <img src="<%= user.avatar %>" alt="avatar"  class="login-avatar">
              </a>
              <span class="view-more">
                <i class="fas fa-chevron-down ml-2 view-more-btn"></i>
              </span>
              <ul class="view-more-links">
                <a href="<%= queryString %>" class="view-more-btn">
                <li class="view-more-link view-more-btn">
                 MY PROFILE
                </li>
              </a>
              <a href="/logout" class="view-more-btn">
                <li class="view-more-link view-more-btn">
                    LOGOUT
                </li>
              </a>
              </ul>
            </div>
          <% } %>
        </div>
  </nav>
  <nav class="navbar sticky-top navbar-light bg-light navbar-expand-lg py-0 sub-nav d-none d-lg-block">
    <div class="container">
      <ul class="navbar-nav mr-auto mt-2 mt-lg-0" style="width: 100%;justify-content: space-around;">
        <li class="nav-item section-title" style="margin-bottom: 0;">
          <a class="nav-link" href="#">Home</a>
        </li>
        <li class="nav-item section-title" style="margin-bottom: 0;">
          <a class="nav-link active" href="#">Profile Overview<span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item section-title" style="margin-bottom: 0;">
          <a class="nav-link" href="#">Friends</a>
        </li>
        <li class="nav-item section-title" style="margin-bottom: 0;">
          <a class="nav-link" href="#">Games Owned</a>
        </li>
      </ul>
    </div>
  </nav>










  <nav class="mobile-nav d-block d-lg-none" style="overflow-y: scroll;">     
    <ul class="mobile-navlinks">
        <li class="signin-btn">
          <a href="/auth/steam">
            <img src="/images/steamloginbutton.jpg" alt="login-btn" >
          </a>
        </li>
      <li class="nav-link">
        <a href="/">
          Home
        </a>
      </li>
        <li class="myprofile-btn" style="display:none;position: relative;" class="nav-link">
          <img src="<%= user.avatar %>" alt="avatar" class="mobile-nav-avatar">
          <a href="/user?url=<%= user.myProfileQueryString %>" class="stretched-link">
            My Profile
          </a>
        </li>
      <li class="nav-link-active profile-overview" class="nav-link">
        Profile Overview
      </li>
      <li class="nav-link">
        Friends
      </li>
      <li class="nav-link">
        Games Owned
      </li>
      <li class="nav-steam-quick-links d-flex flex-column align-items-center nav-link" style="margin-bottom: 2rem;">
        <div class="mb-3">
          Steam Quick Links
          <button class="steam-quicklinks-viewmore">
            <i class="fas fa-chevron-down"></i>
          </button>
        </div>
        <div style="display: none;">
          <ul class="mobile-steamquick-links">
            <li class="mobile-steamquick-link">
              <a href="http://steamcommunity.com/profiles/<%= dataObj.persondata.steamid %>/inventory" target="_blank" rel="no-follow">
                Inventory
              </a>
            </li>
            <li class="mobile-steamquick-link">
              <a href="http://steamcommunity.com/profiles/<%= dataObj.persondata.steamid %>/allcomments" target="_blank" rel="no-follow">
                Profile Comments
              </a>
            </li>
            <li class="mobile-steamquick-link">
              <a href="http://steamcommunity.com/profiles/<%= dataObj.persondata.steamid %>/friends/common" target="_blank" rel="no-follow">
                Common Friends
              </a>
            </li>
            <li class="mobile-steamquick-link">
              <a href="http://steamcommunity.com/profiles/<%= dataObj.persondata.steamid %>/namehistory" target="_blank" rel="no-follow">
                Name History
              </a>
            </li>
            <li class="mobile-steamquick-link">
              <a href="http://steamcommunity.com/profiles/<%= dataObj.persondata.steamid %>/groups" target="_blank" rel="no-follow">
              </a>
              Groups
            </li>
          </ul>
        </div>  
      </li>
      <li class="logout-btn nav-link">
        <a href="/logout" class="stretched-link"></a>
          Logout
      </li>
    </ul>
  </nav>

  <script>
    const navUser = <%- JSON.stringify(user) %>
    const NavUserKeys = Object.keys(navUser).length;
    const myProfileBtn = document.querySelector(".myprofile-btn");
    const siginBtn =  document.querySelector(".signin-btn");
    const logoutBtn = document.querySelector(".logout-btn");
   if(!NavUserKeys){
     myProfileBtn.style.display = "none";
     logoutBtn.style.display = "none";
     siginBtn.style.visibility = "visibile";
   }else{
    myProfileBtn.style.display = "flex";
    logoutBtn.style.display = "flex";
    siginBtn.style.visibility = "hidden";
   }
  </script>